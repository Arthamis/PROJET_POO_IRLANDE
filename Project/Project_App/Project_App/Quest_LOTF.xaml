<Page x:Class="Project_App.Quest_LOTF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Quest_LOTF">

    <Grid ScrollViewer.CanContentScroll="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="300*"/>

        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" Margin="110,0,0,20" VerticalAlignment="Center" Height="150" Click="LOTF_Quest1_Click" Width="150" Grid.Row="1">
            <Image HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150" Source="/DS1_quest_icon.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="110,0,0,20" VerticalAlignment="Center" Height="150" Click="LOTF_Quest2_Click" Width="150" Grid.Row="2">
            <Image HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150" Source="/DS1_quest_icon.png"/>
        </Button>

        <Button HorizontalAlignment="Right" Margin="0,0,110,20" VerticalAlignment="Center" Height="150" Click="LOTF_Quest3_Click" Width="150" Grid.Row="1">
            <Image HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150" Source="/DS1_quest_icon.png"/>
        </Button>
        <Button HorizontalAlignment="Right" Margin="0,0,110,20" VerticalAlignment="Center" Height="150" Click="LOTF_Quest4_Click" Width="150" Grid.Row="2">
            <Image HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150" Source="/DS1_quest_icon.png"/>
        </Button>

        <Label Content="QUESTS" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="46" Width="148" FontWeight="Bold" FontSize="20" FontFamily="Arial Black" Background="{x:Null}" Foreground="White"/>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/lotf_bg.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>

    </Grid>
</Page>
