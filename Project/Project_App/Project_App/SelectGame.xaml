<Page x:Class="Project_App.SelectGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectGame" Loaded="On_Load">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="164*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="229*"/>
            <RowDefinition Height="221*"/>

        </Grid.RowDefinitions>

        <Button Margin="23,0,0,0" Height="144" Width="286" Click="ER_Click" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image HorizontalAlignment="Center" Height="153" VerticalAlignment="Top" Width="314" Source="/elden_ring.jpg"/>
        </Button>

        <Button HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Center" Height="143" Click="DS1_Click" Grid.Row="1" Width="290">
            <Image HorizontalAlignment="Center" Height="162" VerticalAlignment="Top" Width="286" Source="/ds1.jpg"/>
        </Button>

        <Button HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="144" Width="286" Click="DS3_Click" Grid.Column="2">
            <Image HorizontalAlignment="Center" Height="164" VerticalAlignment="Top" Width="286
                   " Source="/ds3_2.jpg"/>
        </Button>

        <Button HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="143" Width="286" Click="LOTF_Click" Grid.Row="1" Grid.Column="2">
            <Image HorizontalAlignment="Center" Height="158" VerticalAlignment="Top" Width="286" Source="/lotf.jpg"/>
        </Button>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Main_bg.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
    </Grid>

</Page>
